<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/RudaTextViewStyle</item>
        <item name="android:buttonStyle">@style/RudaButtonStyle</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.Login" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/RudaTextViewStyle</item>
        <item name="android:buttonStyle">@style/RudaButtonStyle</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <!-- Edit Text -->
    <style name="EditText" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorGrey</item>
        <item name="android:background">@drawable/edit_text_round_bg_outline</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <!-- bg Register -->
    <style name="EditText.Flat.Grey" parent="@style/AppTheme">
        <item name="android:textColorHint">@color/grey_40</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Subhead</item>
        <item name="android:textColor">@color/grey_90</item>
    </style>


    <!-- font -->
    <style name="RudaTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/ruda</item>
    </style>

    <style name="RudaButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/ruda</item>
    </style>

    <!--TabLayout order-->
    <style name="AppTabLayoutLogin">
        <item name="tabIndicatorColor">@color/colorOrange</item>
        <item name="tabIndicatorHeight">5dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">@color/colorWhite</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Toolbar -->
    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:elevation" tools:ignore="NewApi">0dp</item>
    </style>

    <!-- Toolbar tombol back agar hitam -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorBlack</item>
    </style>

    <!-- View -->
    <style name="lineView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorLightGrey</item>
    </style>

    <!-- Text View -->
    <style name="CodeFont">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CodeFont.black" parent="CodeFont">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="CodeFont.orange" parent="CodeFont">
        <item name="android:textColor">@color/colorOrange</item>
    </style>

    <style name="CodeFont.white" parent="CodeFont">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
    </style>

    <style name="CodeFont.bold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--style for ripple library-->
    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="EditText.Grey" parent="@style/AppTheme">
        <item name="colorControlActivated">@color/colorGrey</item>
        <item name="colorControlHighlight">@color/colorGrey</item>
        <item name="colorControlNormal">@color/colorLightGrey</item>
    </style>

    <style name="EditText.White" parent="@style/AppTheme">
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="colorControlNormal">@color/colorBlack</item>
    </style>
</resources>
